<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :book_title %>
    <%= f.input :book_author %>
    <%= f.input :page_amount %>
    <%= f.input :last_page_read %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
