<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :page_amount, :input_html => {:style => 'width: 150px'} %>
  </div>

  <div class="form-group">
    <%= f.collection_select :book_id, @books, :id, :book_title, {:include_blank => 'Select a Book'}, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
