<%if current_user %>
<h2>Trophies</h2>
	

	<div class="frame">
		<% @books.each do |book| %>
			<div class="well">
				<h4><%= book.book_title %><br><small><%= book.book_author %></small></h4>
				<p><%= book.percentage(book.page_amount, book.last_page_read)%></p>
				<h6><%= link_to 'Edit', edit_book_path(book) %> | <%= link_to 'Delete', book, method: :delete, data: {confirm: 'Are you sure?'} %></h6> 
			</div>
		<% end %>
	</div>
	<div class="controls center">
		<div class="book-button">
		<%= link_to "Add Book", new_book_path, class: 'btn btn-info' %>
		</div>
	</div>

<% end %>


